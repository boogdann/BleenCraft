proc OnKeyDown, wparam

  cmp [wparam], VK_ESCAPE
  jne .control        
    
    cmp [_isCursor], 1
    jne .switch 
      
    invoke  ShowCursor, 0
    
    neg [_isCursor]
    
    jmp .control 
    
.switch:

    invoke ShowCursor, 1
    
    neg [_isCursor]
     
.control:
  
  cmp [wparam], VK_CONTROL
