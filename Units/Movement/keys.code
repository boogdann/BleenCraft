proc checkMoveKeys

  invoke  GetAsyncKeyState, $57
  cmp eax, 0
  jz .A
  
  stdcall MoveControllerFree, ÒameraTurn, ÒameraPos, 1
  
.A:
  
  invoke  GetAsyncKeyState, $41
  cmp eax, 0
  jz .S
  
  stdcall MoveControllerFree, ÒameraTurn, ÒameraPos, 2
  
.S:
  
  invoke  GetAsyncKeyState, $53
  cmp eax, 0
  jz .D

  stdcall MoveControllerFree, ÒameraTurn, ÒameraPos, 3
  
.D:
  
  invoke  GetAsyncKeyState, $44
  cmp eax, 0
  jz @F
  
  stdcall MoveControllerFree, ÒameraTurn, ÒameraPos, 4

@@:
  
  ret
  
endp